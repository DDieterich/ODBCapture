BEGIN
  xs_principal.grant_roles(grantee => '"GRB_TEST_USER_01"', 
     role => '"XSCONNECT"');
END;
/

prompt principal grant "XSPUBLIC" to "GRB_TEST_USER_01";
BEGIN
  xs_principal.grant_roles(grantee => '"GRB_TEST_USER_01"', 
     role => '"XSPUBLIC"');
END;
/

