BEGIN
  xs_principal.grant_roles(grantee => '"GRB_TEST_USER_02"', 
     role => '"GRB_TEST_ROLE_01"');
END;
/

prompt principal grant "XSCONNECT" to "GRB_TEST_USER_02";
BEGIN
  xs_principal.grant_roles(grantee => '"GRB_TEST_USER_02"', 
